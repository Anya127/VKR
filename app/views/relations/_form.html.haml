= form_for @relation do |f|
  - if @relation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@relation.errors.count, "error")} prohibited this relation from being saved:"
      %ul
        - @relation.errors.full_messages.each do |message|
          %li= message

  .row
    .col-md-6
      .form-group
        = f.label :"Количество дней отпуска"
        = f.text_area :d_vocation_pu, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Должность"
      = f.text_field :post, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Подразделение"
      = f.text_field :unit, class: "form-control"
  .row
    .col-md-6
      .form-group
  .form-actions
    = f.submit 'Сохранить', class: "btn btn-success"
    \|
    = link_to 'Назад', relations_path, class: "btn btn-success"
