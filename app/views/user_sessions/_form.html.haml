= form_tag user_sessions_path, :method => :post do
  .field
    = label_tag :Логин
    = text_field_tag :email
  .field
    = label_tag :Пароль
    = password_field_tag :password
  .field
    = check_box_tag :remember, params[:remember], true
    = label_tag :Запомнить
  .actions
    = submit_tag "Войти"
