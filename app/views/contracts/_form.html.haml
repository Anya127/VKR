= form_for @contract do |f|
  - if @contract.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contract.errors.count, "error")} prohibited this contract from being saved:"
      %ul
        - @contract.errors.full_messages.each do |message|
          %li= message

  .row
    .col-md-6
      .form-group
        = f.label :"Номер договора"
        = f.text_area :number_c, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Дата заключения"
      = f.date_select :d_conclusion_c, class: "form-control"
  .row
    .col-md-6
      .form-group
        = f.label :"Дата окончания"
        = f.date_select :d_expiration_c, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Ставка"
      = f.text_field :stavka, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Количество дней отпуска"
      = f.text_area :vocation_c, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Специальные условия"
      = f.text_area :special_conditions, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Работник"
      = f.text_field :worker_id, class: "form-control"
  .row
    .col-md-6
      .form-group
      = f.label :"Связь"
      = f.text_field :relation_id, class: "form-control"
  .row
    .col-md-6
      .form-group
  .form-actions
    = f.submit 'Сохранить', class: "btn btn-success"
    \|
    = link_to 'Назад', contracts_path, class: "btn btn-success"
