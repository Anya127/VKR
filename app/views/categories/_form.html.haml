= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name_c
    = f.text_area :name_c
  .field
    = f.label :full_name_c
    = f.text_area :full_name_c
  .field
    = f.label :d_vocation_c
    = f.text_area :d_vocation_c
  .actions
    = f.submit 'Save'
